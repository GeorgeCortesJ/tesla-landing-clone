---
import LeadingHeader from "../components/LeadingHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import ModelY from "../components/ModelY.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla clone">
	<LeadingHeader />

	<main
		class="snap-mandatory snap-y w-full h-full relative overflow-y-auto scroll-smooth"
	>
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
	</main>
</Layout>
